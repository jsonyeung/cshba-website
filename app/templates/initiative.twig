<!DOCTYPE html>

    {% embed 'layout/header.twig' %}
        {% block styles %}
            <link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.7.1/slick.min.css'>
        {% endblock %} 
    {% endembed %}

    {% include 'layout/nav.twig' with {'inverse': false} %}

    <header class='l-initiative__header'>
        <div class='l-header__bg' style='background-image: url("{{TimberImage(post.thumbnail).src}}"); background-position: top center; opacity: 0.4;'></div>
        <div class='l-header__bg' style='background: #F2BC4D; opacity: 0.3;'></div>

        <div class="l-section__content">
            <div class='l-module'>
                <a href='{{ site.link }}/initiatives#init' class='o-button--solid-secondary u-inline-block'><span class='fa fa-long-arrow-left'></span> Back to Initiatives</a>
            </div>
        </div>
    </header>

        <header class='l-header'>
            <div class='l-section__content'>
                <div class='l-block u-type-contain-larger u-padding-none'>
                    <h1 class='u-margin-top--1'>{{post.title}}</h1> 
                    <span class='o-label u-block u-margin-top-4 u-margin-bottom-2'>Summary</span>
                    <p class='u-type-subtitle--desc u-type-type-respond-2 u-inline-block u-type-contain-large u-color-dark'>{{post.get_field('initiative_summary')}}</p>

                    <div class='u-padding-top-1 u-padding-bottom-1' style='border-top: 1px solid lightgrey;'>
                        {% for meta in post.get_field('meta') %}
                            <div class='u-inline-block u-margin-right-1'>
                                <span class='o-label u-block u-margin-bottom-0'>{{meta.label}}</span>
                                {% for val in meta.values %}
                                    {% if val.link %}
                                        <a class='o-link u-margin-none' href='{{val.link}}' target='_blank'>{{val.value}}</a>
                                    {% else %}
                                        <p class='u-margin-none'>{{val.value}}</p>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </header>

        <section class='l-section'>
            <div class='l-section__content u-position-relative'>
                <div class='l-module--1col u-flex-justify-space-between'>
                    <div>{{post.content}}</div>

                    {% include 'modules/share.twig' %}
                </div>
            </div>
        </section>

        
        <section class='l-section u-margin-top-6 u-margin-bottom-neg-7 u-color-bg-alternate u-padding-top-5 u-padding-bottom-5'>
            <div class='l-section__content'>
                <div class='l-module--3col'>
                    <h4 class='related u-margin-top-none u-margin-bottom-1'>Related Initiatives</h4>
                </div>
                <div class='l-initiative__related'>
                    {% for init in initiatives %}
                    <div>
                        <a href='{{init.link}}' class='u-block'><img src='{{init.thumbnail|resize(500,300, "center")}}'></a>
                        <div>
                            <a href='{{init.link}}'><h5>{{init.title}}</h5></a>  
                            <a class='o-button--link-secondary' href='{{init.link}}'>Learn More</a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        {% include 'layout/footer.twig' %}

        {% embed 'layout/scripts.twig' %}{% endembed %}     
    </body>
</html>
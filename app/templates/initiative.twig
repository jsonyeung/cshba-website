<!DOCTYPE html>

    {% embed 'layout/header.twig' %}
        {% block styles %}
            <link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.7.1/slick.min.css'>
        {% endblock %} 
    {% endembed %}

    {% include 'layout/nav.twig' with {'inverse': false} %}

        <section class='l-section'>
            <div class='l-section__bg-container u-margin-top-7 u-margin-bottom-2'>
                <div class='l-section__bg' style='background-image: url("{{post.thumbnail.src}}"); background-size: cover; background-position: center;'></div>
            </div>
        </section>

        <header class='l-header'>
            <div class='l-section__content'>
                <div class='l-block u-type-contain-large u-padding-none'>
                    <h1><span class='o-label--secondary u-block u-color-secondary-accent'>Initiative</span> {{post.title}}</h1>
                    <span class='o-label u-block u-margin-top-4 u-margin-bottom-2'>Summary</span>
                    <p class='u-type-subtitle--desc u-type-type-respond-2 u-inline-block u-type-contain-large u-color-dark'>{{post.get_field('initiative_summary')}}</p>

                    <div class='u-padding-top-1' style='border-top: 1px solid lightgrey;'>
                        {% for meta in post.get_field('meta') %}
                            <div class='u-inline-block u-margin-right-1'>
                                <span class='o-label u-block u-margin-bottom-0'>{{meta.label}}</span>
                                {% for val in meta.values %}
                                    {% if val.link %}
                                        <a class='o-link u-margin-none' href='{{val.link}}' target='_blank'>{{val.value}}</a>
                                    {% else %}
                                        <p class='u-margin-none'>{{val.value}}</p>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </header>

        <section class='l-section'>
            <div class='l-section__content u-position-relative'>
                <div class='l-module--1col'>
                    <div>{{post.content}}</div>

                    <div class='l-initiative__share'>   
                        <span class='o-label'>Share</span>
                        <ul class='m-menu u-margin-top--1 u-margin-bottom-0'>
                            <li><a href='http://www.facebook.com/sharer.php?u={{post.link}}' target='_blank' style='color:#3b5998;'><span class='fa fa-facebook'></span></a></li>
                            <li><a href='https://twitter.com/share?url={{post.link}}&amp;text={{"Chinatown Society Heritage Building Association - CSHBA" | url_encode }}&amp;hashtags=chinatownvancouver' target='_blank' style='color:#55acee;'><span class='fa fa-twitter'></span></a></li>
                            <li><a href='https://plus.google.com/share?url={{post.link}}' target='_blank' style='color:#dd4b39;'><span class='fa fa-google-plus'></span></a></li>
                            <li><a href='mailto:?Subject={{wp_title}}&amp;Body={{post.link}}' style='color:#ACACAC'><span class='fa fa-envelope'></span></a></li>
                        </ul>
                        <a class='o-button--link-secondary u-type-respond--1' href='javascript:window.print();'><span class='fa fa-print'></span> Print this page</a>
                    </div>
                </div>
            </div>
        </section>

        
        <section class='l-section u-margin-top-6'>
            <div class='l-section__content'>
                <div class='l-module--3col'>
                    <h4 class='u-margin-bottom-1'>Related Initiatives</h4>
                </div>
                <div class='l-initiative__related'>
                    {% for init in initiatives %}
                    <div>
                        <a href='{{init.link}}' class='u-block'><img src='{{init.thumbnail|resize(500,300, "center")}}'></a>
                        <div>
                            <a href='{{init.link}}'><h5>{{init.title}}</h5></a>  
                            <a class='o-button--link-secondary' href='{{init.link}}'>Learn More</a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        {% include 'layout/footer.twig' %}

        {% embed 'layout/scripts.twig' %}{% endembed %}     
    </body>
</html>
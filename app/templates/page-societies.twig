<!DOCTYPE html>

    {% embed 'layout/header.twig' %}
        {% block styles %}
            <link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.7.1/slick.min.css'>
        {% endblock %} 
    {% endembed %}

    {% include 'layout/nav.twig' with {'inverse': true} %}

    {% include 'layout/main-header.twig' %}

        {% include 'modules/content.twig' with {layouts:post.get_field('modular_layout')} %}

        <section id='soc' class='l-section u-color-bg-alternate u-margin-top-7 u-margin-bottom-neg-7'>
            <div class='l-section__content u-padding-top-6 u-padding-bottom-6'>
                <h3 class='u-flex-full u-type-center u-margin-top-none u-padding-bottom-0' style='border-bottom: 1px solid #dcdcdc;'>Societies with heritage buildings</h3>
                <div class='l-module--3col'>

                    {% for society in societies %}
                        <div class='l-module__society-list u-margin-top-3'> 
                            <a href='{{society.link}}'><img class='u-margin-bottom-0' src='{{society.thumbnail|resize(500,300,"center")}}'></a>
                            <div>
                                <a href='{{society.link}}'>
                                    <h4 class='u-margin-none u-color-primary'>{{society.title}}</h4>
                                    <p class='o-label--secondary u-margin-top-none u-margin-bottom-0'>{{society.chinese_title}}</p>
                                </a>
                                <a class='o-button--link-secondary' href='{{society.link}}'>Explore Society</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        {% include 'layout/footer.twig' %}
        {% embed 'layout/scripts.twig' %}{% endembed %}    
    </body>
</html>